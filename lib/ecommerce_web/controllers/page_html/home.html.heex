<Layouts.flash_group flash={@flash} />
<!-- Hero Section -->
<section class="bg-gray-100 py-16 text-center">
  <h1 class="text-5xl font-bold text-gray-800 mb-4">Welcome to Ecommerce</h1>
  <p class="text-lg text-gray-600 mb-6">
    Discover the best products at unbeatable prices.
  </p>
  <a href={~p"/products"} class="px-6 py-3 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700">
    Shop Now
  </a>
</section>

<!-- Features Section -->
<section class="py-16 px-6 md:px-12 lg:px-24 bg-white">
  <div class="grid md:grid-cols-3 gap-10 text-center">
    <div>
      <div class="text-4xl mb-4">🚚</div>
      <h3 class="text-xl font-semibold mb-2">Fast Delivery</h3>
      <p class="text-gray-600">Get your products delivered quickly and reliably.</p>
    </div>
    <div>
      <div class="text-4xl mb-4">💳</div>
      <h3 class="text-xl font-semibold mb-2">Secure Payments</h3>
      <p class="text-gray-600">We use secure payment systems to keep your data safe.</p>
    </div>
    <div>
      <div class="text-4xl mb-4">⭐</div>
      <h3 class="text-xl font-semibold mb-2">Top Quality</h3>
      <p class="text-gray-600">Shop only the best, curated products from trusted brands.</p>
    </div>
  </div>
</section>

<!-- Call to Action -->
<section class="py-16 bg-gray-50 text-center">
  <h2 class="text-3xl font-bold mb-4">Ready to start shopping?</h2>
  <p class="text-gray-600 mb-6">Browse our catalog and find your favorites today.</p>
  <a href={~p"/products"} class="px-6 py-3 bg-green-600 text-white rounded-lg shadow hover:bg-green-700">
    Start Shopping
  </a>
</section>


